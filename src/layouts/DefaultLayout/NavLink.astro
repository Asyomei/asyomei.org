---
import A from '#/components/A'

interface Props {
  to: string
}

const { to } = Astro.props
const { pathname } = Astro.url

const trim = (url: string) => url.replace(/\/$/, '')
const active = trim(to) === trim(pathname)
---

{
  active ? (
    <span style={{ fontWeight: 'bold' }}>
      <slot />
    </span>
  ) : (
    <A href={to}>
      <slot />
    </A>
  )
}
