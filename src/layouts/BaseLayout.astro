---
export interface Props {
  title?: string
  class?: string
}

const { title = "asyomei", class: className } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.webp" />
    <title>{title}</title>
  </head>
  <body class:list={["m-0 p-0", className]}>
    <slot />
  </body>
</html>
